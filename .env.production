#--------------------------------------------------------------------
# PRODUCTION Environment Configuration
# Copy this file to .env on your production server
# and fill in the appropriate values
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# PENTING: Ganti dengan URL domain production Anda
app.baseURL = 'https://yourdomain.com/'

# Force HTTPS di production
app.forceGlobalSecureRequests = true

# Content Security Policy (opsional, uncomment jika diperlukan)
# app.CSPEnabled = true

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = your_database_name
database.default.username = your_db_username
database.default.password = your_secure_password
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# PENTING: Generate encryption key dengan perintah:
# php spark key:generate
encryption.key = hex2bin:YOUR_ENCRYPTION_KEY_HERE

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

# Untuk production, gunakan DatabaseHandler untuk session yang lebih aman
# session.driver = 'CodeIgniter\Session\Handlers\DatabaseHandler'
# session.savePath = 'ci_sessions'

# Atau gunakan FileHandler dengan path yang aman
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.savePath = WRITEPATH . 'session'

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

# Untuk production, gunakan threshold 1 (errors only) atau 4 (info)
logger.threshold = 4
